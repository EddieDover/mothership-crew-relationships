<div class="relationship-viewer-container">
  {{#if hasCharacters}}
    <div class="relationship-canvas-wrapper">
      <canvas id="relationship-canvas"></canvas>
    </div>
    <div class="relationship-legend">
      <p><i class="fas fa-circle"></i> {{localize "UI.ViewerLegendNodes"}}</p>
      <p><i class="fas fa-minus"></i> {{localize "UI.ViewerLegendEdges"}}</p>
    </div>
  {{else}}
    <div class="relationship-viewer-empty">
      <p>{{localize "UI.NoCrewMembers"}}</p>
      <p>{{localize "UI.CreateMoreCharacters"}}</p>
    </div>
  {{/if}}
</div>